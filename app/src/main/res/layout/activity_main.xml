<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fahrenheit"
        android:textSize="25dp"
        android:fontStyle="normal"
        android:fontWeight="700"/>
    <EditText
        android:id="@+id/edtdoF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvThongBaoF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="#ED2A2A"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Celsius"
        android:textSize="25dp"
        android:fontStyle="normal"
        android:fontWeight="700"/>
    <EditText
        android:id="@+id/edtdoC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvThongBaoC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="#ED2A2A"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonConvToC"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Convert \nTo Celsius"
            android:backgroundTint="#817F7F"
            android:layout_margin="20dp" />
        <Button
            android:id="@+id/buttonConvToF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert \nTo Fahrenheit"
            android:backgroundTint="#817F7F"
            android:layout_margin="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/buttonClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#817F7F"
        android:text="Clear"/>
</LinearLayout>